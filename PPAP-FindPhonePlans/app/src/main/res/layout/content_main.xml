<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="226dp"
        android:layout_height="212dp"
        app:srcCompat="@drawable/logo1"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/welcome1"
        android:layout_width="295dp"
        android:layout_height="90dp"
        android:text="Welcome to the PPAP Application"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/welcome2"
        android:layout_width="283dp"
        android:layout_height="70dp"
        android:text="Search and compare the price of mobile phones and plans"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/welcome1"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/phoneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_grey"
        android:text="SEARCH PHONE PLANS"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcome2"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/simBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH SIM PLANS"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_blue"
        android:layout_below="@id/phoneBtn"/>


</RelativeLayout>